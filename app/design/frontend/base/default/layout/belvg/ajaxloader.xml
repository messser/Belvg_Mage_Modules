<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addCss"><stylesheet>css/belvg/ajaxloader.css</stylesheet></action>
        </reference>
        <reference name="jquery_head">
            <action method="addLib" ifconfig="ajaxloader/settings/enabled"><libname>jquery</libname></action>
            <action method="addLib" ifconfig="ajaxloader/settings/enabled"><libname>noconflict</libname></action>
            <action method="addJs"  ifconfig="ajaxloader/settings/enabled"><script>belvg/ajaxloader/ajaxloader.js</script></action>
        </reference>
        <reference name="after_body_start">
            <block type="ajaxloader/front" name="ajaxloader.block">
                <action method="setTemplate" ifconfig="ajaxloader/settings/enabled"><template>belvg/ajaxloader/block.phtml</template></action>
            </block>
        </reference>        
    </default>
</layout>            