<config>
    <sections>
        <ajaxloader translate="label" module="ajaxloader">
            <label>Ajax Loader</label>
            <tab>belvg</tab>
            <frontend_type>text</frontend_type>
            <sort_order>99999</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <info translate="label" module="ajaxloader">
                    <label>Info</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <comment>        
                    <![CDATA[
                    <div style="padding:10px;background-color:#fff;border:1px solid #ddd;margin-bottom:7px;">
                    <div style="float:left;margin-right:10px;background:url('data:image/png;base64,') no-repeat; width: 54px; height: 54px;"></div>
                    This module was developed by <a href="http://www.belvg.com" target="_blank">www.BelVG.com</a>.<br>
                    For docs & examples refer to the BelVG <a href="http://www.belvg.com" target="_blank">web site</a>.
                    <br/>We have the largest selections of  <a href="http://store.belvg.com/extensions.html" target="_blank">extensions</a> and <a href="http://store.belvg.com/themes.html" target="_blank">themes</a> on Magento.
                    </div>
                    ]]>
                    </comment>
                    <fields>
                        <info>
                            <frontend_type>text</frontend_type>
                            <frontend_model>ajaxloader/adminhtml_config_info</frontend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </info>
                    </fields>
                </info>
                <settings translate="label" module="ajaxloader">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <title_general translate="label" module="ajaxloader">
                            <label>General</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>ajaxloader/adminhtml_config_title</frontend_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title_general>
                        <enabled translate="label tooltip" module="ajaxloader">
                            <label>Enable For Frontend</label>
                            <tooltip><![CDATA[<strong>enable / disable</strong><br>Enable or disable module at frontend]]></tooltip>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <onload translate="label tooltip" module="ajaxloader">
                            <label>Show During Page Loading</label>
                            <tooltip><![CDATA[<strong>enable / disable</strong><br>Enable or disable module at frontend]]></tooltip>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </onload>
                        <animation_speed translate="label comment" module="ajaxloader">
                            <label>Animation Speed</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comments></comments>
                            <validate>validate-number validate-digits-range digits-range-1-5000 required-entry</validate>
                        </animation_speed>
                        <title_cursor translate="label" module="ajaxloader">
                            <label>Cursor Loader</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>ajaxloader/adminhtml_config_title</frontend_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title_cursor>
                        <cursor_loader_enabled translate="label tooltip" module="ajaxloader">
                            <label>Cursor Loader</label>
                            <tooltip><![CDATA[<strong>enable / disable</strong><br>Enable or disable module at frontend]]></tooltip>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>21</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cursor_loader_enabled>
                        <cursor_loader_image translate="label" module="ajaxloader">
                            <label>Loader Image</label>
                            <frontend_type>image</frontend_type>
                            <backend_model>Belvg_Ajaxloader_Model_Config_Image</backend_model>
                            <default_value>default/ajax-loader.gif</default_value>
                            <upload_dir config="system/filesystem/media" scope_info="1">ajaxloader</upload_dir>
                            <base_url type="media" scope_info="1">ajaxloader</base_url>
                            <sort_order>22</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <cursor_loader_enabled>1</cursor_loader_enabled>
                            </depends>
                        </cursor_loader_image>
                        <title_overlay translate="label" module="ajaxloader">
                            <label>Overlay</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>ajaxloader/adminhtml_config_title</frontend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title_overlay>
                        <overlay_enabled translate="label tooltip" module="ajaxloader">
                            <label>Overlay</label>
                            <tooltip><![CDATA[<strong>enable / disable</strong><br>Enable or disable module at frontend]]></tooltip>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>31</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </overlay_enabled>
                        <overlay_opacity translate="label comment" module="ajaxloader">
                            <label>Opacity</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>32</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comments></comments>
                            <validate>validate-number validate-digits-range digits-range-0-1 required-entry</validate>
                            <depends>
                                <overlay_enabled>1</overlay_enabled>
                            </depends>
                        </overlay_opacity>
                        <overlay_color translate="label comment">
                            <label>Color</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>33</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comments></comments>
                            <depends>
                                <overlay_enabled>1</overlay_enabled>
                            </depends>
                        </overlay_color>
                        <overlay_element translate="label comment">
                            <label>Element</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>34</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comments></comments>
                            <depends>
                                <overlay_enabled>1</overlay_enabled>
                            </depends>
                        </overlay_element>
                        <title_main_loader translate="label" module="ajaxloader">
                            <label>Main Loader</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>ajaxloader/adminhtml_config_title</frontend_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title_main_loader>
                        <main_loader_enabled translate="label tooltip" module="ajaxloader">
                            <label>Main Loader</label>
                            <tooltip><![CDATA[<strong>enable / disable</strong><br>Enable or disable module at frontend]]></tooltip>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>51</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </main_loader_enabled>
                        <main_loader_image translate="label" module="ajaxloader">
                            <label>Loader Image</label>
                            <frontend_type>image</frontend_type>
                            <backend_model>Belvg_Ajaxloader_Model_Config_Image</backend_model>
                            <default_value>default/loader.gif</default_value>
                            <upload_dir config="system/filesystem/media" scope_info="1">ajaxloader</upload_dir>
                            <base_url type="media" scope_info="1">ajaxloader</base_url>
                            <sort_order>52</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <main_loader_enabled>1</main_loader_enabled>
                            </depends>
                        </main_loader_image>
                        <main_loader_opacity translate="label comment" module="ajaxloader">
                            <label>Opacity</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>53</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comments></comments>
                            <validate>validate-number validate-digits-range digits-range-0-1 required-entry</validate>
                            <depends>
                                <overlay_enabled>1</overlay_enabled>
                            </depends>
                        </main_loader_opacity>
                    </fields>
                </settings>
            </groups>
        </ajaxloader>
    </sections>
</config>